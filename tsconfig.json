{
  "compilerOptions": {
    "module": "CommonJS",
    "allowJs": true,
    "moduleResolution": "node",
    "target": "es2015",
    "sourceMap": true,
    "inlineSources": true,
    "jsx": "preserve",
    "baseUrl": "./src",
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/map"
  ],
  "types": [
    "./types"
  ]
}
